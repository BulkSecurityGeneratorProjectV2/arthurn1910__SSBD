<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- definicja ról uwzględnianych w kontroli dostępu -->
    <security-role>
        <description/>
        <role-name>ADMINISTRATOR</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>MENADZER</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>AGENT</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>KLIENT</role-name>
    </security-role>
    <!-- kontrola dostępu do zasobów administratora -->
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>AdministratorConstr</display-name>
        <web-resource-collection>
            <web-resource-name>Strony administratora</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ADMINISTRATOR</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <!-- kontrola dostępu do zasobów menedżera -->
    <security-constraint>
        <display-name>MenadzerConstr</display-name>
        <web-resource-collection>
            <web-resource-name>Strony menadżera</web-resource-name>
            <description/>
            <url-pattern>/menadzer/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>MENADZER</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <!-- kontrola dostępu do zasobów agenta -->
    <security-constraint>
        <display-name>AgentConstr</display-name>
        <web-resource-collection>
            <web-resource-name>Strony agenta</web-resource-name>
            <description/>
            <url-pattern>/agent/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>AGENT</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <!-- kontrola dostępu do zasobów klienta -->
    <security-constraint>
        <display-name>KlientConstr</display-name>
        <web-resource-collection>
            <web-resource-name>Strony klienta</web-resource-name>
            <description/>
            <url-pattern>/klient/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>KLIENT</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <!-- definicja metody logowania, odwołanie do stron z formularzem logowania i komunikatem błędu -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>ssbd01realm</realm-name>
        <form-login-config>
            <form-login-page>/login/login.html</form-login-page>
            <form-error-page>/login/error.html</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
